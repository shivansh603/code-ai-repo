10 REM Simple Recipe Manager
20 DIM RECIPE_NAME(50)
30 DIM INGREDIENTS(10)
40 DIM INSTRUCTIONS(50)
50 DIM NUM_INGREDIENTS

60 PRINT "Enter the name of the recipe:"
70 INPUT RECIPE_NAME

80 PRINT "Enter the number of ingredients:"
90 INPUT NUM_INGREDIENTS

100 FOR I = 1 TO NUM_INGREDIENTS
110   PRINT "Enter ingredient "; I; ":"
120   INPUT INGREDIENTS(I)
130 NEXT I

140 PRINT "Enter cooking instructions:"
150 INPUT INSTRUCTIONS

160 PRINT "Recipe for "; RECIPE_NAME
170 PRINT "Ingredients:"
180 FOR I = 1 TO NUM_INGREDIENTS
190   PRINT INGREDIENTS(I)
200 NEXT I
210 PRINT "Instructions: "; INSTRUCTIONS
220 END
