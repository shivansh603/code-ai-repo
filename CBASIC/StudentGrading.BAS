10 REM Student Grading System
20 DIM STUDENT_NAME(50)
30 DIM GRADE(50)
40 DIM NUM_STUDENTS
50 DIM AVERAGE, TOTAL, I

60 PRINT "Enter the number of students (max 50):"
70 INPUT NUM_STUDENTS

80 FOR I = 1 TO NUM_STUDENTS
90   PRINT "Enter the name of student "; I; ":"
100  INPUT STUDENT_NAME(I)
110  PRINT "Enter the grade of "; STUDENT_NAME(I); ":"
120  INPUT GRADE(I)
130 NEXT I

140 TOTAL = 0
150 FOR I = 1 TO NUM_STUDENTS
160   TOTAL = TOTAL + GRADE(I)
170 NEXT I

180 AVERAGE = TOTAL / NUM_STUDENTS
190 PRINT "Average Grade: "; AVERAGE

200 PRINT "Student Grades:"
210 FOR I = 1 TO NUM_STUDENTS
220   PRINT STUDENT_NAME(I); ": "; GRADE(I); " - "; 
230   IF GRADE(I) >= 90 THEN PRINT "A" 
240   IF GRADE(I) >= 80 AND GRADE(I) < 90 THEN PRINT "B"
250   IF GRADE(I) >= 70 AND GRADE(I) < 80 THEN PRINT "C"
260   IF GRADE(I) >= 60 AND GRADE(I) < 70 THEN PRINT "D"
270   IF GRADE(I) < 60 THEN PRINT "F"
280 NEXT I

290 END
